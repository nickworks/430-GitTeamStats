<Window x:Class="GitTeamStats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitTeamStats"
        xmlns:viewmodels="clr-namespace:GitTeamStats.ViewModels"
        xmlns:views="clr-namespace:GitTeamStats.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="475" Width="800">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:LoginVM}">
            <views:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:RepoVM}">
            <views:RepoView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding}"/>
    </Grid>
</Window>
